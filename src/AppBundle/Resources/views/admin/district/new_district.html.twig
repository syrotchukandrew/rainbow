{% extends 'AppBundle:admin:base_admin.html.twig' %}

{% block body %}
    <div class="wrapper">
        <div id="page-wrapper">
            <h1>New district</h1>
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            <input type="submit" value="Create" class="btn btn-default"/>

            {{ form_widget(form.saveAndCreateNew, { label: 'Save and create new'|trans, attr: { class: 'btn btn-default' } }) }}
            <br><br>
            <a href="{{ path('admin_districts') }}" class="btn btn-default">
                Back to list
            </a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

